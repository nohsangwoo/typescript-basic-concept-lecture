    // tsx 파일을 jsx로 어떻게 컴파일할 것인지 'preserve', 'react-native', 'react'
    "jsx": "preserve",
    // 모든 ts파일을 js파일 하나로 컴파일해줌 (module이 none, amd, system일 때만 가능)
    "outFile": "./",
    // js파일 아웃풋 경로바꾸기
    "outDir": "./",
    // 루트경로 바꾸기 (js 파일 아웃풋 경로에 영향줌)
